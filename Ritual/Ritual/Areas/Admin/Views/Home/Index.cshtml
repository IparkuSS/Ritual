@using Ritual.Domain.Entities
@model IQueryable<Ritual.Domain.Entities.ServiceItem>
@{
    string strTitle = "Панель администратора";
    ViewBag.Title = strTitle;
}

<div>
    <article id="main" class="container special">

        <h2>@strTitle</h2>
        <div>
            <hr>
            <h2><a asp-area="Admin" asp-controller="Home" asp-action="IndexBascet">Просмотреть сообщение</a> </h2>
            <hr>



            <h3>Гробы</h3>

            <a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="">Добавить гроб в полосу прокрутки</a>

            @if (Model.Any())
            {
                <div>
                    @foreach (ServiceItem entity in Model)
                    {
                        <div>
                            <a asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                            |
                            <form style="display: inline-block;" id="form-@entity.Id" asp-area="Admin" asp-controller="ServiceItems" asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@entity.Id">
                                <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                            </form>
                            |
                            <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@entity.Id">
                                @($"{entity.Title}")
                            </a>
                        </div>
                    }
                </div>
            }
            <hr>

        </div>

        <div>


            <h2>Добавить в полосу прокрутки</h2>

            <br>
            <a asp-area="Admin" asp-controller="Home" asp-action="IndexWhres">Венки</a>
            <br>
            <a asp-area="Admin" asp-controller="Home" asp-action="IndexCross">Кресты</a>
            <br>
            <a asp-area="Admin" asp-controller="Home" asp-action="IndexMonument">Памятники</a>
            <br>
            <a asp-area="Admin" asp-controller="Home" asp-action="IndexDifferent">Разное</a>
            <br>
            <a asp-area="Admin" asp-controller="Home" asp-action="IndexInitMon">Установка</a>
            <hr>
        </div>

        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
            <input type="submit" value="Выйти" />
        </form>

    </article>
</div>


